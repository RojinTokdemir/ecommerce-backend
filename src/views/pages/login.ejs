<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #fafafa;
        }

        .auth-wrap {
            min-height: calc(100vh - 86px);
            display: flex;
            align-items: center;
        }

        .auth-card {
            max-width: 520px;
            width: 100%;
            border-radius: 18px;
        }

        .auth-btn {
            height: 46px;
            border-radius: 12px;
        }

        .auth-input {
            height: 48px;
            border-radius: 12px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR (Partial) -->
    <%- include('../partials/navbar') %>

        <!-- AUTH -->
        <div class="container auth-wrap">
            <div class="mx-auto auth-card bg-white border shadow-sm p-4 p-md-5">

                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-1">Account</h2>
                    <div class="text-muted small">Login or create a new account</div>
                </div>

                <!-- Tabs -->
                <ul class="nav nav-pills nav-fill mb-4" id="authTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="tab-login" data-bs-toggle="pill"
                            data-bs-target="#pane-login" type="button" role="tab">Login</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="tab-register" data-bs-toggle="pill" data-bs-target="#pane-register"
                            type="button" role="tab">Register</button>
                    </li>
                </ul>

                <div class="tab-content">
                    <!-- LOGIN -->
                    <div class="tab-pane fade show active" id="pane-login" role="tabpanel">
                        <div class="mb-3">
                            <input id="loginUsername" class="form-control auth-input"
                                placeholder="Username (örn: admin)">
                        </div>
                        <div class="mb-2">
                            <input id="loginPassword" type="password" class="form-control auth-input"
                                placeholder="Password">
                        </div>

                        <div id="loginError" class="text-danger small mb-3" style="min-height:20px;"></div>

                        <button id="loginBtn" class="btn btn-dark w-100 auth-btn">Login</button>
                    </div>

                    <!-- REGISTER -->
                    <div class="tab-pane fade" id="pane-register" role="tabpanel">
                        <div class="mb-3">
                            <input id="regUsername" class="form-control auth-input" placeholder="Choose a username">
                        </div>
                        <div class="mb-2">
                            <input id="regPassword" type="password" class="form-control auth-input"
                                placeholder="Choose a password">
                        </div>

                        <div id="regError" class="text-danger small mb-3" style="min-height:20px;"></div>

                        <button id="registerBtn" class="btn btn-outline-dark w-100 auth-btn">Create account</button>

                        <div class="text-muted small mt-3">
                            Not: Kayıt olan kullanıcılar <b>role=user</b> olarak oluşur.
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- LOGOUT -->
                <div class="d-flex justify-content-between align-items-center">
                    <div class="small text-muted" id="whoami">Not logged in</div>
                    <button class="btn btn-light border" id="logoutBtn" type="button">Logout</button>
                </div>

            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/login.js"></script>
        <script src="/js/navbar.js"></script>
</body>

</html>