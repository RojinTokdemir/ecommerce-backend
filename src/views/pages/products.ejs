<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/produt.css">
</head>

<body>

    <!-- NAVBAR (EJS) -->
    <%- include("../partials/navbar.ejs") %>

        <!-- ====== PRODUCT AND FILTERS ====== -->
        <div class="container">
            <!-- filtre button -->
            <button class="btn btn-dark my-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterCanvas"
                aria-controls="filterCanvas">
                Filters
            </button>

            <!-- offcanvas -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="filterCanvas" aria-labelledby="filterCanvasLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="filterCanvasLabel">Filters</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body d-flex flex-column p-0">
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <!-- price -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseOne" aria-expanded="false"
                                    aria-controls="flush-collapseOne">
                                    Price
                                </button>
                            </h2>
                            <div id="flush-collapseOne" class="accordion-collapse collapse"
                                data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <label class="form-label small text-muted mb-1">From</label>
                                            <input type="number" class="form-control" value="1299">
                                        </div>
                                        <div class="col-6 text-end">
                                            <label class="form-label small text-muted mb-1">To</label>
                                            <input type="number" class="form-control" value="1299">
                                        </div>
                                    </div>

                                    <div class="mt-3">
                                        <input type="range" class="form-range" min="0" max="3000" value="1299">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- category -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseTwoCategory" aria-expanded="false"
                                    aria-controls="flush-collapseTwoCategory">
                                    Category
                                </button>
                            </h2>
                            <div id="flush-collapseTwoCategory" class="accordion-collapse collapse"
                                data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <input type="search" class="form-control mb-3" placeholder="Search">
                                    <div class="overflow-auto" style="max-height: 220px;">
                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="catPhone">
                                                <label class="form-check-label" for="catPhone">Phone</label>
                                            </div>
                                            <small class="text-muted">105</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="catCamera">
                                                <label class="form-check-label" for="catCamera">Camera</label>
                                            </div>
                                            <small class="text-muted">68</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="catAudio">
                                                <label class="form-check-label" for="catAudio">Audio</label>
                                            </div>
                                            <small class="text-muted">36</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="catWatch">
                                                <label class="form-check-label" for="catWatch">Watch</label>
                                            </div>
                                            <small class="text-muted">22</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- brand -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseBrand" aria-expanded="false"
                                    aria-controls="flush-collapseBrand">
                                    Brand
                                </button>
                            </h2>
                            <div id="flush-collapseBrand" class="accordion-collapse collapse"
                                data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <input type="search" class="form-control mb-3" placeholder="Search">

                                    <div class="overflow-auto" style="max-height: 220px;">
                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="brandApple">
                                                <label class="form-check-label" for="brandApple">Apple</label>
                                            </div>
                                            <small class="text-muted">110</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="brandSamsung">
                                                <label class="form-check-label" for="brandSamsung">Samsung</label>
                                            </div>
                                            <small class="text-muted">125</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="brandXiaomi">
                                                <label class="form-check-label" for="brandXiaomi">Xiaomi</label>
                                            </div>
                                            <small class="text-muted">68</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="brandOppo">
                                                <label class="form-check-label" for="brandOppo">OPPO</label>
                                            </div>
                                            <small class="text-muted">36</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="brandNokia">
                                                <label class="form-check-label" for="brandNokia">Nokia</label>
                                            </div>
                                            <small class="text-muted">22</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- built-in memory -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseThree" aria-expanded="false"
                                    aria-controls="flush-collapseThree">
                                    Built-in memory
                                </button>
                            </h2>
                            <div id="flush-collapseThree" class="accordion-collapse collapse"
                                data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <input type="search" class="form-control mb-3" placeholder="Search">

                                    <div class="overflow-auto" style="max-height: 220px;">
                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="mem16">
                                                <label class="form-check-label" for="mem16">16GB</label>
                                            </div>
                                            <small class="text-muted">65</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="mem32">
                                                <label class="form-check-label" for="mem32">32GB</label>
                                            </div>
                                            <small class="text-muted">123</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="mem64">
                                                <label class="form-check-label" for="mem64">64GB</label>
                                            </div>
                                            <small class="text-muted">48</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="mem128">
                                                <label class="form-check-label" for="mem128">128GB</label>
                                            </div>
                                            <small class="text-muted">50</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="mem256">
                                                <label class="form-check-label" for="mem256">256GB</label>
                                            </div>
                                            <small class="text-muted">24</small>
                                        </div>

                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div>
                                                <input class="form-check-input" type="checkbox" id="mem512">
                                                <label class="form-check-label" for="mem512">512GB</label>
                                            </div>
                                            <small class="text-muted">8</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="p-3 border-top">
                        <button class="btn btn-dark w-100" data-bs-dismiss="offcanvas">Apply</button>
                    </div>
                </div>
            </div>

            <div class="row g-4" id="productList"></div>
        </div>

        <%- include("../partials/footer.ejs") %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
            <script type="module" src="/js/products.js"></script>
</body>

</html>