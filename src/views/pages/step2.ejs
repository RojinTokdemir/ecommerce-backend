<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Step 2</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.8/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/step2.css">
</head>

<body>

    <!-- NAVBAR (EJS) -->
    <%- include("../partials/navbar.ejs") %>

        <div class="container my-4">

            <!-- STEPS -->
            <div class="row align-items-center text-center g-3 mb-4">
                <div class="col-md-4 d-none d-md-flex align-items-center justify-content-center gap-2 opacity-50">
                    <span class="rounded-circle border d-inline-flex align-items-center justify-content-center"
                        style="width:28px;height:28px;">1</span>
                    <div class="text-start">
                        <div class="small text-muted">Step 1</div>
                        <div class="fw-semibold">Address</div>
                    </div>
                </div>

                <div class="col-12 col-md-4 d-flex align-items-center justify-content-center gap-2">
                    <span
                        class="rounded-circle border border-dark d-inline-flex align-items-center justify-content-center"
                        style="width:28px;height:28px;">
                        <span class="bg-dark rounded-circle" style="width:10px;height:10px;"></span>
                    </span>
                    <div class="text-start">
                        <div class="small text-muted">Step 2</div>
                        <div class="fw-semibold">Shipping</div>
                    </div>
                </div>

                <div class="col-md-4 d-none d-md-flex align-items-center justify-content-center gap-2 opacity-50">
                    <span class="rounded-circle border d-inline-flex align-items-center justify-content-center"
                        style="width:28px;height:28px;">3</span>
                    <div class="text-start">
                        <div class="small text-muted">Step 3</div>
                        <div class="fw-semibold">Payment</div>
                    </div>
                </div>
            </div>

            <!-- BOX -->
            <div class="border rounded-3 p-3 p-md-4">
                <h6 class="fw-bold mb-3">Shipment Method</h6>

                <div class="d-flex flex-column">

                    <!-- free -->
                    <label class="border rounded-3 p-3 mb-3 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <input class="form-check-input m-0" type="radio" name="ship" value="free" checked>
                            <div class="d-flex align-items-center gap-3 flex-wrap">
                                <span class="fw-semibold">Free</span>
                                <span class="text-muted small">Regular shipment</span>
                            </div>
                        </div>
                        <div class="text-muted small">17 Oct, 2023</div>
                    </label>

                    <!-- fast -->
                    <label class="border rounded-3 p-3 mb-3 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <input class="form-check-input m-0" type="radio" name="ship" value="fast">
                            <div class="d-flex align-items-center gap-3 flex-wrap">
                                <span class="fw-semibold">$8.50</span>
                                <span class="text-muted small">Get your delivery as soon as possible</span>
                            </div>
                        </div>
                        <div class="text-muted small">1 Oct, 2023</div>
                    </label>

                    <!-- schedule -->
                    <label class="border rounded-3 p-3 d-flex flex-column gap-2">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-3">
                                <input class="form-check-input m-0" type="radio" name="ship" value="schedule"
                                    data-bs-toggle="collapse" data-bs-target="#scheduleDate">
                                <div class="d-flex align-items-center gap-3 flex-wrap">
                                    <span class="fw-semibold">Schedule</span>
                                    <span class="text-muted small">Pick a date when you want to get your delivery</span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center gap-2 text-muted small">
                                <span>Select Date</span><span>â–¾</span>
                            </div>
                        </div>

                        <div class="collapse" id="scheduleDate">
                            <input id="shipDate" type="date" class="form-control mt-2">
                        </div>
                    </label>

                </div>

                <!-- ACTIONS -->
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <button id="step2Back" class="btn btn-outline-dark px-4" type="button">Back</button>
                    <button id="step2Next" class="btn btn-dark px-4" type="button">Next</button>
                </div>
            </div>
        </div>

        <!-- FOOTER (EJS) -->
        <%- include("../partials/footer.ejs") %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
            <script type="module" src="/js/checkout.js"></script>
</body>

</html>