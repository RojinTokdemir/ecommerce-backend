<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Step 3</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.8/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/step3.css">
</head>

<body>

    <!-- NAVBAR (EJS) -->
    <%- include("../partials/navbar.ejs") %>

        <div class="container my-4">

            <!-- STEPS row -->
            <div class="row align-items-center g-3 mb-4 text-center justify-content-center">

                <div class="col-md-4 d-none d-md-flex justify-content-center">
                    <div class="d-flex align-items-center gap-2 opacity-50">
                        <span class="rounded-circle border d-inline-flex align-items-center justify-content-center"
                            style="width:28px;height:28px;">1</span>
                        <div class="text-start">
                            <div class="small text-muted">Step 1</div>
                            <div class="fw-semibold">Address</div>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-4 d-flex justify-content-center">
                    <div class="d-flex align-items-center gap-2 opacity-50">
                        <span class="rounded-circle border d-inline-flex align-items-center justify-content-center"
                            style="width:28px;height:28px;">2</span>
                        <div class="text-start">
                            <div class="small text-muted">Step 2</div>
                            <div class="fw-semibold">Shipping</div>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-4 d-flex justify-content-center">
                    <div class="d-flex align-items-center gap-2">
                        <span
                            class="rounded-circle border border-dark d-inline-flex align-items-center justify-content-center"
                            style="width:28px;height:28px;">
                            <span class="bg-dark rounded-circle" style="width:10px;height:10px;"></span>
                        </span>
                        <div class="text-start">
                            <div class="small text-muted">Step 3</div>
                            <div class="fw-semibold">Payment</div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- CONTENT -->
            <div class="row g-4">

                <!-- LEFT: SUMMARY -->
                <div class="col-12 col-lg-5">
                    <div class="border rounded-3 p-3 p-md-4 h-100">
                        <h6 class="fw-bold mb-3">Summary</h6>

                        <div id="summaryItems" class="d-flex flex-column gap-2 mb-3"></div>

                        <div class="small text-muted mb-1">Address</div>
                        <div id="sumAddress" class="small mb-3">-</div>

                        <div class="small text-muted mb-1">Shipment method</div>
                        <div id="sumShip" class="small mb-3">-</div>

                        <hr class="my-3" />

                        <div class="d-flex justify-content-between small fw-bold">
                            <span>Total</span>
                            <span id="sumTotal">$0</span>
                        </div>
                    </div>
                </div>

                <!-- RIGHT: PAYMENT -->
                <div class="col-12 col-lg-7">
                    <div class="border rounded-3 p-3 p-md-4 h-100">
                        <h6 class="fw-bold mb-3">Payment</h6>

                        <ul class="nav nav-underline mb-3">
                            <li class="nav-item"><button class="nav-link active" type="button">Credit Card</button></li>
                            <li class="nav-item"><button class="nav-link" type="button">PayPal</button></li>
                            <li class="nav-item"><button class="nav-link" type="button">PayPal Credit</button></li>
                        </ul>

                        <div class="rounded-4 bg-dark text-white p-4 mb-3" style="max-width: 420px;">
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div class="small opacity-75">ðŸ’³</div>
                                <div class="small opacity-75">â‹¯</div>
                            </div>
                            <div class="fs-5 mb-3" style="letter-spacing: 2px;">
                                4085&nbsp;&nbsp;9536&nbsp;&nbsp;8475&nbsp;&nbsp;9530
                            </div>
                            <div class="small opacity-75">Cardholder</div>
                        </div>

                        <div class="mb-3"><input class="form-control" placeholder="Cardholder Name"></div>
                        <div class="mb-3"><input class="form-control" placeholder="Card Number"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-6"><input class="form-control" placeholder="Exp.Date"></div>
                            <div class="col-6"><input class="form-control" placeholder="CVV"></div>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="sameAddr" checked>
                            <label class="form-check-label small" for="sameAddr">Same as billing address</label>
                        </div>

                        <div class="d-flex justify-content-end gap-3">
                            <button id="step3Back" class="btn btn-outline-dark px-4" type="button">Back</button>
                            <div id="result" class="mt-3"></div>
                            <button id="step3Pay" class="btn btn-dark px-5" type="button">Pay</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- FOOTER (EJS) -->
        <%- include("../partials/footer.ejs") %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
            <script type="module" src="/js/checkout.js"></script>
</body>

</html>