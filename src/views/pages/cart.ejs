<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/cart.css">
</head>

<body>

    <!-- NAVBAR (EJS) -->
    <%- include("../partials/navbar.ejs") %>

        <!-- ====== Shopping Cart and Order Summary ====== -->
        <div class="container my-5 cart-wrap">
            <div class="bg-white rounded-4 shadow-sm p-4 p-lg-5">
                <div class="row g-0">

                    <!-- LEFT: Shopping Cart -->
                    <div class="col-12 col-lg-7 pe-lg-5">
                        <h5 class="fw-bold mb-4">Shopping Cart</h5>
                        <div id="cartList"></div>
                    </div>

                    <!-- Divider -->
                    <div class="d-none d-lg-block col-lg-1 px-lg-4">
                        <div class="divider"></div>
                    </div>

                    <!-- RIGHT: Order Summary -->
                    <div class="col-12 col-lg-4 ps-lg-4 pt-4 pt-lg-0">
                        <div class="summary-card">
                            <h5 class="fw-bold text-center mb-4">Order Summary</h5>

                            <div class="mb-3">
                                <label class="form-label small text-muted">Discount code / Promo code</label>
                                <input class="form-control" placeholder="Code">
                            </div>

                            <div class="mb-4">
                                <label class="form-label small text-muted">Your bonus card number</label>
                                <div class="d-flex gap-2">
                                    <input class="form-control" placeholder="Enter Card Number">
                                    <button class="btn btn-outline-dark apply-btn">Apply</button>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <span class="fw-semibold">Subtotal</span>
                                <span id="sumSubtotal" class="fw-semibold">$0</span>
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Estimated Tax</span>
                                <span id="sumTax" class="fw-semibold">$0</span>
                            </div>

                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Estimated shipping &amp; Handling</span>
                                <span id="sumShip" class="fw-semibold">$0</span>
                            </div>

                            <div class="d-flex justify-content-between fw-bold fs-5 pt-2">
                                <span>Total</span>
                                <span id="sumTotal" class="fw-semibold">$0</span>
                            </div>

                            <!-- Checkout -->
                            <a href="/step1-page" class="btn btn-dark w-100 mt-4 checkout-btn">Checkout</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- FOOTER (EJS) -->
        <%- include("../partials/footer.ejs") %>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

            <!-- Cart JS -->
            <script type="module" src="/js/cart.js"></script>
</body>

</html>